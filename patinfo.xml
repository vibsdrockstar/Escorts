<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01315a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vibhor.hospitalmanagementsystem.Info">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               android:textColor="#ffffff"
               android:textColorHint="#f5f5f5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/et_f"
               android:inputType="textPersonName"
               android:layout_alignParentTop="true"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true"
               android:hint="Firstname" />

           <EditText
               android:textColor="#ffffff"
               android:textColorHint="#f5f5f5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/et_l"
               android:hint="Lastname"
               android:inputType="textPersonName"
               android:layout_below="@+id/et_f"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />
           <EditText
               android:textColor="#ffffff"
               android:textColorHint="#f5f5f5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/age"
               android:hint="Age"
               android:inputType="number"
               android:maxLength="3"
               android:layout_below="@+id/et_l"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />
           <EditText
               android:textColor="#ffffff"
               android:textColorHint="#f5f5f5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/et_city"
               android:hint="City"
               android:inputType="textPostalAddress"
               android:layout_below="@+id/age"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ADD PATIENT"
               android:id="@+id/b_add"
               android:onClick="btn_click"
               android:layout_below="@+id/et_city"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="DELETE PATIENT"
               android:id="@+id/b_delete"
               android:onClick="btn_click"
               android:layout_below="@+id/b_add"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="UPDATE PATIENT"
               android:id="@+id/b_update"
               android:onClick="btn_click"
               android:layout_below="@+id/b_delete"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="LIST PATIENTS"
               android:id="@+id/b_list"
               android:onClick="btn_click"
               android:layout_below="@+id/b_update"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true" />

           <TextView
               android:textColor="#ffffff"
               android:textColorHint="#f5f5f5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:text="Large Text"
               android:id="@+id/textView2"
               android:layout_below="@+id/b_list"
               android:layout_centerHorizontal="true" />
       </RelativeLayout>
   </ScrollView>

</RelativeLayout>
